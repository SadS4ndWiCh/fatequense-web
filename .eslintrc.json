{
  "extends": [
    "@rocketseat/eslint-config/react",
    "next"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": false,
      "semi": true,
      "tabWidth": 2,
      "trailingComma": "all",
      "importOrder": [
        "^react$",
        "^next/(.*)$",
        "<THIRD_PARTY_MODULES>",
        "^(.*)/config/(.*)$",
        "^(.*)/hooks/(.*)$",
        "^(.*)/lib/(.*)$",
        "^(.*)/components/ui/(.*)$",
        "^(.*)/components/(.*)$",
        "^[./]"
      ],
      "importOrderSeparation": true,
      "importOrderSortSpecifiers": true,
      "plugins": [
        "prettier-plugin-tailwindcss",
		    "@trivago/prettier-plugin-sort-imports"
      ]
    }]
  }
}
